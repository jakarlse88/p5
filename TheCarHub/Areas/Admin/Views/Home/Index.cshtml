@model List<TheCarHub.Models.ViewModels.ListingViewModel>

<div class="app-main__inner">
    <div class="app-page-title">
        <div class="page-title-wrapper">
            <div class="page-title-heading">
                <div class="page-title-icon">
                    <i class="pe-7s-car icon-gradient bg-mean-fruit">
                    </i>
                </div>
                <div>
                    Listings Dashboard
                    <div class="page-title-subheading">
                        View, edit, and/or create listings.
                    </div>
                </div>
            </div>
            <div class="page-title-actions">
                <a asp-area="Admin" asp-controller="Listing" asp-action="Create">
                    <button type="button" class="btn-shadow btn btn-info">
                        <span class="btn-icon-wrapper pr-2 opacity-7">
                            <i class="fas fa-plus fa-w-20"></i>
                        </span>
                        New Listing
                    </button>
                </a>
            </div>
        </div>
    </div>
@* </div> *@

    
@* <div> *@
    <table class="table table-striped table-hover" id="datatable">
        <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Car Year</th>
            <th scope="col">Make</th>
            <th scope="col">Model</th>
            <th scope="col">Title</th>
            <th scope="col">Status</th>
            <th scope="col">Price</th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@($"{item.Car.Year.Year.ToString()}")</td>
                <td>@($"{item.Car.Make}")</td>
                <td>@($"{item.Car.Model}")</td>
                <td>@item.Title</td>
                <td>@item.Status.Name</td>
                <td>@item.SellingPrice</td>
                <td>
                    <a asp-area="Admin" asp-controller="Listing" asp-action="Edit" asp-route-id="@item.Id">
                        <i class="fas fa-cog"></i>
                        Edit
                    </a>
                    |
                    <a asp-area="Admin" asp-controller="Listing" asp-action="Details" asp-route-id="@item.Id">
                        <i class="fas fa-info"></i>
                        Details
                    </a>
                    |
                    <a asp-area="Admin" asp-controller="Listing" asp-action="Delete" asp-route-id="@item.Id">
                        <i class="fas fa-trash-alt"></i>
                        Delete
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
@* </div> *@
